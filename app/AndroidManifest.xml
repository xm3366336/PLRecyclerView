<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pengl.demo">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning"
        tools:targetApi="n">
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.EmptyActivity"
            android:exported="false"
            android:label="@string/title_activity_empty" />
        <activity
            android:name=".ui.ErrorActivity"
            android:exported="false"
            android:label="@string/title_activity_error" />
        <activity
            android:name=".ui.SingleItemActivity"
            android:exported="false"
            android:label="@string/title_activity_single_item" />
        <activity
            android:name=".ui.GridActivity"
            android:exported="false"
            android:label="@string/title_activity_grid" />
        <activity
            android:name=".ui.MultiItemActivity"
            android:exported="false"
            android:label="@string/title_activity_multi_item" />
        <activity
            android:name=".ui.StaggeredActivity"
            android:exported="false"
            android:label="@string/title_activity_staggered" />
        <activity
            android:name=".ui.ManualLoadMoreActivity"
            android:exported="false"
            android:label="@string/title_activity_manual_load_more" />
        <activity
            android:name=".ui.DragActivity"
            android:exported="false"
            android:label="@string/title_activity_item_drag" />
        <activity
            android:name=".ui.ExpandActivity"
            android:exported="false"
            android:label="@string/title_activity_expand" />
    </application>

</manifest>